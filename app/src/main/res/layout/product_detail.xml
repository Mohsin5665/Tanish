<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/header"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/p_image"
                android:layout_width="305dp"
                android:layout_height="340dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="1dp" />


            <TextView
                android:id="@+id/p_name"
                android:layout_width="274dp"
                android:layout_height="69dp"
                android:layout_margin="1dp"
                android:background="@drawable/round"
                android:fontFamily="@font/font"
                android:gravity="center"
                android:hint="Product Name"
                android:padding="5dp"
                android:textColor="@color/red"
                android:textColorHint="@color/red"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/p_disc"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_margin="1dp"
                android:background="@drawable/round"
                android:fontFamily="@font/font"
                android:gravity="center"
                android:hint="Description"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/p_aval"
                    android:layout_width="153dp"
                    android:layout_height="57dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/round"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    android:hint="Availability"
                    android:padding="5dp"
                    android:textColor="@color/green"
                    android:textColorHint="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/P_name1"
                    android:layout_width="225dp"
                    android:layout_height="57dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/round"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    android:hint="Product Name"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="20dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="84dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    android:text="Size"
                    android:textColor="@color/black" />

                <Spinner
                    android:id="@+id/spinner_size"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="#0000FF"></Spinner>



                   <TextView
                       android:layout_width="84dp"
                       android:layout_height="match_parent"
                       android:fontFamily="@font/font"
                       android:gravity="center_vertical"
                       android:text="Color"
                       android:textColor="@color/black" />

                   <Spinner
                       android:id="@+id/spinner_color"
                       android:layout_width="50dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="57dp">

                <TextView

                    android:layout_width="74dp"
                    android:layout_height="45dp"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    android:text="Price"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:background="#FFFFFF"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    android:hint="Orgl Price PKR"
                    android:textColor="#FFFF5656"
                    android:textColorHint="#FFFF5656" />

                <TextView
                    android:layout_width="81dp"
                    android:layout_height="46dp"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    android:text="Discount"
                    android:textColor="@color/red" />

                <TextView
                    android:id="@+id/dprice"
                    android:layout_width="131dp"
                    android:layout_height="58dp"
                    android:background="#FFFF5656"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    android:hint="N/A"
                    android:textColor="#FFFFFF" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="20sp"
                android:layout_height="50dp">
            <TextView
                android:layout_width="74dp"
                android:layout_height="45dp"
                android:fontFamily="@font/font"
                android:gravity="center"
                android:text="QTY"
                android:textColor="@color/black" />

                <EditText
                    android:id="@+id/pedit"
                    android:layout_width="87dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:hint="1"/>

                <Button
                    android:id="@+id/pbtn"
                    android:layout_width="190dp"
                    android:layout_height="55dp"
                    android:background="#FFFF5656"
                    android:text="ADD TO CART"
                    android:textColor="@color/white" />

            </LinearLayout>
        </LinearLayout>


    </ScrollView>


</LinearLayout>